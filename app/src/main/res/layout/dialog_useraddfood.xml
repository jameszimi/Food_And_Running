<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <TextView
            android:text="ชื่ออาหาร"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView19" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/foodNameText"
            app:layout_constraintStart_toStartOf="@+id/textView19" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView19" android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="แคลลอรี่"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView47" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/foodNameText"
            app:layout_constraintStart_toStartOf="@+id/foodNameText"
    />
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/foodCalText"
            app:layout_constraintStart_toStartOf="@+id/textView47"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView47"
            android:layout_marginEnd="24dp" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="ยกเลิก"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cancleUseraddfood" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/foodCalText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"/>
    <Button
            android:text="บันทึก"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/submitUseraddfood"
            app:layout_constraintTop_toTopOf="@+id/cancleUseraddfood" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"/>
</android.support.constraint.ConstraintLayout>

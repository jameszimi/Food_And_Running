<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FoodEditDetailActivity">

    <include android:layout_width="0dp"
             android:layout_height="wrap_content"
             layout="@layout/main_toolbar"  android:layout_marginBottom="100dp"
             app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/recyclerView_searchfood"
             app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"/>
    <android.support.v7.widget.SearchView
            android:autofillHints="ค้นหา"
            android:layout_width="319dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="44dp"
            android:layout_marginTop="116dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/browser_actions_bg_grey" android:id="@+id/adminSearchView"/>
    <TextView
            android:text="ค้นหารายการอาหาร"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/adminSearchView"
            app:layout_constraintStart_toStartOf="@+id/adminSearchView"
            android:layout_marginStart="8dp"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="327dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/adminRecyclerView_searchfood" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/adminSearchView"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintEnd_toEndOf="parent"
    >
    </android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>
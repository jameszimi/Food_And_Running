<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <TextView
            android:text="รายการอาหารที่ต้องการเพิ่ม"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview00" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_foodname" app:layout_constraintStart_toStartOf="@+id/textview00"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textview00"/>
    <TextView
            android:text="จำนวนแคลลอรี่"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView37"
            app:layout_constraintStart_toStartOf="@+id/textView45"
            app:layout_constraintBottom_toBottomOf="@+id/dialog_caltotal"/>
    <TextView
            android:text="null"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_caltotal"
            app:layout_constraintEnd_toEndOf="@+id/dialog_type"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/dialog_eattotal"
    />
    <TextView
            android:text="ปริมาณที่บริโภค"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView45" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/dialog_foodname"
            app:layout_constraintStart_toStartOf="@+id/dialog_foodname"/>
    <TextView
            android:text="null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_eattotal"
            app:layout_constraintEnd_toStartOf="@+id/dialog_type"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/dialog_type"/>
    <TextView
            android:text="type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_type" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@+id/textView45"/>
</android.support.constraint.ConstraintLayout>
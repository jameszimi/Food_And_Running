<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:text="ระบุน้ำหนักเป้าหมาย"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView43" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="48dp" android:layout_marginTop="44dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_edittext"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/goal_text" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="48dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView43"/>
    <Button
            android:text="ยืนยัน"
            android:background="@drawable/rounded_buttonadd"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setgoal_summit" app:layout_constraintEnd_toEndOf="@+id/goal_text"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/goal_text"/>
    <Button
            android:text="ยกเลิก"
            android:background="@drawable/rounded_close"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setgoal_cancle"
            app:layout_constraintTop_toTopOf="@+id/setgoal_summit"
            app:layout_constraintStart_toStartOf="@+id/textView43"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView44" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/setgoal_summit" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>

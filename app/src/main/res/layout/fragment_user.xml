<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".UserFragment"
            android:layout_margin="20dp">


    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="wrap_content">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:src="@drawable/baseline_person_black_24dp"
                android:id="@+id/imageView" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="TODO"/>
        <TextView
                android:text="ชื่อ - นามสกุล"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView17"
                app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="156dp"
                android:layout_marginTop="24dp"/>
        <TextView
                android:text="ระยะเวลาที่คาดการในการลดน้ำหนัก"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView18" android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/textView17" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"/>
        <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:id="@+id/progressBarToGoal" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView18" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="44dp"/>
        <TextView
                android:text=" วัน"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/prediction_text"
                app:layout_constraintTop_toBottomOf="@+id/weight_goalText" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" android:layout_marginTop="16dp"/>
        <View
                android:id="@+id/view1"
                android:layout_width="300dp"
                android:layout_height="2dp"
                android:background="#807c828f"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/prediction_text"
                android:layout_marginTop="24dp" android:layout_marginStart="32dp"/>
        <TextView
                android:text="น้ำหนักปัจจุบัน"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView20" android:layout_marginTop="28dp"
                app:layout_constraintTop_toBottomOf="@+id/view1" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"/>
        <TextView
                android:text="0 kg"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_weight"
                app:layout_constraintTop_toTopOf="@+id/textView20" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="4dp"/>
        <ImageView
                android:src="@drawable/weigth_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/usUpdateWeight" android:layout_marginTop="48dp"
                app:layout_constraintTop_toBottomOf="@+id/textView20" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="120dp"/>
        <Button
                android:text="แสดงกราฟน้ำหนัก"
                android:background="#00cc90"
                android:textColor="@color/white"
                android:layout_width="148dp"
                android:layout_height="wrap_content"
                android:id="@+id/weightchartBtn" android:layout_marginTop="36dp"
                app:layout_constraintTop_toBottomOf="@+id/usUpdateWeight" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="108dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView22"
                app:layout_constraintTop_toBottomOf="@+id/weightchartBtn" android:layout_marginTop="36dp"
                app:layout_constraintStart_toStartOf="@+id/weightchartBtn" android:layout_marginStart="64dp"/>
        <ImageView
                android:src="@drawable/baseline_settings_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/usersetting" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
        <Button
                android:text="ตั้งเป้าหมาย"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/setgoal" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toTopOf="@+id/progressBarToGoal"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/weight_base" app:layout_constraintStart_toStartOf="@+id/progressBarToGoal"
                app:layout_constraintTop_toBottomOf="@+id/progressBarToGoal"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/weight_goalText"
                app:layout_constraintTop_toTopOf="@+id/weight_base"
                app:layout_constraintEnd_toEndOf="@+id/progressBarToGoal"
        />


    </android.support.constraint.ConstraintLayout>

</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:text="รหัสผ่านใหม่"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView29" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/newPass_text"/>
    <EditText
            android:layout_width="306dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_edittext"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/newPass_text"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView29"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="ยืนยันรหัสผ่านใหม่"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView31" app:layout_constraintStart_toStartOf="@+id/newPass_text"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/newPass_text"/>
    <EditText
            android:layout_height="50dp"
            android:background="@drawable/rounded_edittext"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/newPassCon_text"
            app:layout_constraintStart_toStartOf="@+id/textView31"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView31"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="@+id/newPass_text"
            android:layout_width="306dp"/>
    <TextView
            android:text="รหัสผ่านปัจจุบัน"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView40" app:layout_constraintStart_toStartOf="@+id/newPassCon_text"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/newPassCon_text"/>
    <EditText
            android:layout_height="50dp"
            android:background="@drawable/rounded_edittext"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/oldPass_text"
            app:layout_constraintStart_toStartOf="@+id/textView40"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView40"
            android:layout_width="306dp"
            app:layout_constraintEnd_toEndOf="@+id/newPassCon_text"/>
    <Button
            android:text="ยกเลิก"
            android:background="@drawable/rounded_close"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cancleBtn" app:layout_constraintStart_toStartOf="@+id/oldPass_text"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/oldPass_text"/>
    <Button
            android:text="ตกลง"
            android:background="@drawable/rounded_buttonadd"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sumitBtn" app:layout_constraintEnd_toEndOf="@+id/oldPass_text"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/oldPass_text"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:id="@+id/dialogTxtErPasUp" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/sumitBtn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".CalorieFragment"
            android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <!-- TODO: Update blank fragment layout -->
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="แคลลอรี่อาหารที่ควรบริโภคต่อวัน"
                android:textSize="20sp"
                android:id="@+id/textcalperday" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="24dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/calperday"
                android:textSize="25sp"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/textcalperday"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp"/>
        <TextView
                android:text="ทานไปแล้ว"
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView14"
                android:layout_marginTop="48dp"
                app:layout_constraintTop_toBottomOf="@+id/calperday" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/calAllTotal"
                android:layout_marginTop="28dp"
                android:textSize="35sp"
                app:layout_constraintTop_toBottomOf="@+id/calperday" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp"/>
        <View
                android:id="@+id/view1"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/calAllTotal"
                android:background="#E0752E"
                app:layout_constraintTop_toBottomOf="@+id/calAllTotal" android:layout_marginTop="28dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"/>
        <TextView
                android:text="เช้า"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView16"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/view1"
                android:layout_marginTop="25dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="32dp"/>
        <ImageView
                android:src="@drawable/baseline_add_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/addBF"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/textView16"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"/>
        <android.support.v7.widget.RecyclerView android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="8dp"
                                                android:id="@+id/listbreakfast"
                                                app:layout_constraintTop_toBottomOf="@+id/addBF"
                                                app:layout_constraintStart_toStartOf="parent"
                                                android:layout_marginStart="24dp"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                android:layout_marginEnd="24dp"></android.support.v7.widget.RecyclerView>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="18dp" android:text="รวม"
                  android:layout_marginTop="10dp"
                  app:layout_constraintTop_toBottomOf="@+id/listbreakfast"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="24dp" android:id="@+id/tVendofBF"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/totalBF"
                  android:textSize="18dp"
                  android:layout_marginTop="12dp"
                  app:layout_constraintTop_toBottomOf="@+id/listbreakfast" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="24dp"/>
        <View
                android:id="@+id/view2"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/calAllTotal"
                android:background="#E0752E"
                app:layout_constraintTop_toBottomOf="@+id/tVendofBF" android:layout_marginTop="28dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"/>

        <!-- end bf  !-->

        <TextView
                android:text="เที่ยง"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/thLunch"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/view2"
                android:layout_marginTop="25dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="32dp"/>
        <ImageView
                android:src="@drawable/baseline_add_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/addLunch"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/thLunch"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"/>
        <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:id="@+id/listoflunch"
                app:layout_constraintTop_toBottomOf="@+id/addLunch"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp"></android.support.v7.widget.RecyclerView>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="18dp" android:text="รวม"
                  android:layout_marginTop="10dp"
                  app:layout_constraintTop_toBottomOf="@+id/listoflunch"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="24dp" android:id="@+id/tVendofLunch"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/totalLunch"
                  android:textSize="18dp"
                  android:layout_marginTop="12dp"
                  app:layout_constraintTop_toBottomOf="@+id/listoflunch" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="24dp"/>
        <View
                android:id="@+id/view3"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/calAllTotal"
                android:background="#E0752E"
                app:layout_constraintTop_toBottomOf="@+id/tVendofLunch" android:layout_marginTop="28dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"/>

        <!-- end Lunch  !-->

        <TextView
                android:text="เย็น"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/thDinner"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/view3"
                android:layout_marginTop="25dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="32dp"/>
        <ImageView
                android:src="@drawable/baseline_add_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/addDinner"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/thDinner"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"/>
        <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:id="@+id/listofDinner"
                app:layout_constraintTop_toBottomOf="@+id/addDinner"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp"></android.support.v7.widget.RecyclerView>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="18dp" android:text="รวม"
                  android:layout_marginTop="10dp"
                  app:layout_constraintTop_toBottomOf="@+id/listofDinner"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="24dp" android:id="@+id/tVendofDinner"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/totalDinner"
                  android:textSize="18dp"
                  android:layout_marginTop="12dp"
                  app:layout_constraintTop_toBottomOf="@+id/listofDinner" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="24dp"/>
        <View
                android:id="@+id/view4"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/calAllTotal"
                android:background="#E0752E"
                app:layout_constraintTop_toBottomOf="@+id/tVendofDinner" android:layout_marginTop="28dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"/>

        <!-- end Dinner  !-->

        <TextView
                android:text="ขนมขบเคี้ยว"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/thSnack"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/view4"
                android:layout_marginTop="25dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="32dp"/>
        <ImageView
                android:src="@drawable/baseline_add_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addSnack"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/thSnack"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"/>
        <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:id="@+id/listofSnack"
                app:layout_constraintTop_toBottomOf="@+id/addSnack"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp"></android.support.v7.widget.RecyclerView>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="18dp" android:text="รวม"
                  android:layout_marginTop="10dp"
                  app:layout_constraintTop_toBottomOf="@+id/listofSnack"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="24dp" android:id="@+id/tVendofSnack"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/totalSnack"
                  android:textSize="18dp"
                  android:layout_marginTop="12dp"
                  app:layout_constraintTop_toBottomOf="@+id/listofSnack" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="24dp"/>
        <View
                android:id="@+id/view5"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/calAllTotal"
                android:background="#E0752E"
                app:layout_constraintTop_toBottomOf="@+id/tVendofSnack" android:layout_marginTop="28dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"/>
        <Button
                android:text="สรุปประจำวัน"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:textSize="16sp"
                android:background="@drawable/rounded_button"
                android:id="@+id/calculateCal"
                app:layout_constraintTop_toBottomOf="@id/view5"
                android:layout_marginTop="50dp"
                android:textColor="@color/white"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.498"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/endofpage"
                  android:layout_marginTop="60dp" app:layout_constraintTop_toBottomOf="@id/calculateCal"
                  app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                  app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="24dp"/>

    </android.support.constraint.ConstraintLayout>


</ScrollView>
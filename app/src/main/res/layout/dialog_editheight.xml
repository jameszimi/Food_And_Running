<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:text="น้ำหนัก"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:id="@+id/textView32" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="72dp" android:layout_marginTop="108dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/height_text" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toEndOf="@+id/textView32"
            app:layout_constraintBottom_toBottomOf="@+id/textView32"/>
    <Button
            android:text="ยกเลิก"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_heightcancle" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="60dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/textView32"/>
    <Button
            android:text="บันทึก"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:id="@+id/btn_heightsummit" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="60dp"
            app:layout_constraintTop_toTopOf="@+id/btn_heightcancle"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/upheight" android:layout_marginTop="50dp"
            android:textColor="@color/red"
            app:layout_constraintTop_toBottomOf="@+id/btn_heightsummit"
            app:layout_constraintEnd_toEndOf="@+id/btn_heightsummit" android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>
